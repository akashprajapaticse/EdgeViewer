<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOGGLE RAW"
        android:onClick="onToggleClicked"

        app:layout_constraintBottom_toBottomOf="parent"      app:layout_constraintStart_toStartOf="parent"       app:layout_constraintEnd_toEndOf="parent"           android:layout_marginBottom="32dp"                   android:padding="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>